    <!-- Header Parallax Image -->

    <header class="center header-md bg-dark parallax" data-img="bg/banner7.png" data-speed="0.5" style="height: 400px">

        <div class="container">

            <div style="margin: auto !important;float: left;position: relative;top: 175px;right: 150px;">

