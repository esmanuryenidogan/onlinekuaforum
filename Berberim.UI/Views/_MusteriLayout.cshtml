                        <label>|</label>
                        <i class="fa fa-sign-out" style="font-size: 17px; position: relative;left: 10px"></i><label style="color: White; font-family: cursive;position: relative;left: 20px;">@Html.ActionLink("Çıkış Yap", "CıkısYap", "Home")</label>
