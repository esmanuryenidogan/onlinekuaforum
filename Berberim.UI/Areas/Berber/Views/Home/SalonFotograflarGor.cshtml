@model IEnumerable<Berberim.Data.SALONFOTO>

@{
    ViewBag.Title = "SalonFotograflarGor";
    Layout = "~/Areas/Berber/Views/_BerberLayout.cshtml";
}

<p>
    <button type="button" class="btn btn-outline-info" data-toggle="modal" data-target="#smallmodal" style="margin-left:15px;margin-top:11px;margin-bottom:20px;">
        Salon Fotoğrafı Ekle
    </button>

</p>
@using (Html.BeginForm("SalonFotografEkle", "Home", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
{
    <div class="modal fade" id="smallmodal" tabindex="-1" role="dialog" aria-labelledby="smallmodalLabel" aria-hidden="true">
        <div class="modal-dialog modal-sm" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="smallmodalLabel">Fotoğraf Ekle</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>
                        <input type="file" name="foto" accept="image/*" required />
                    </p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-danger" data-dismiss="modal">Vazgeç</button>
                    <button type="submit" class="btn btn-outline-primary">Kaydet</button>                  
                </div>
            </div>
        </div>
    </div>
}

    @foreach (var item in Model)
    {
       
            <div class="col-md-3">
                <div class="card">
                    <img src="~/Resimler/SalonFotograflar/@item.FOTO">
                    <div class="card-body" style="margin: auto">
                        @Html.ActionLink("Sil", "SalonFotograflarSil", new { id = item.ID }, new { @class = "btn btn-outline-danger" })
                    </div>
                </div>
            </div>
      
    }


