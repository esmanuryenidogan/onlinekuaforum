@model IEnumerable<Berberim.Data.Models.PERSONEL>

@{
    ViewBag.Title = "PersonelDuzenle";
    Layout = "~/Areas/Berber/Views/_BerberLayout.cshtml";
}


<p>
    <button type="button" class="btn btn-outline-info" data-toggle="modal" data-target="#smallmodal" style="margin-left:15px;margin-top:11px;margin-bottom:20px;">
        Personel Ekle
    </button>

</p>
@using (Html.BeginForm("PersonelEkle", "Home", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
{
    <div class="modal fade" id="smallmodal" tabindex="-1" role="dialog" aria-labelledby="smallmodalLabel" aria-hidden="true">
        <div class="modal-dialog modal-sm" role="document">
            <div class="modal-content" style="width: 130%;">
                <div class="modal-header">
                    <h5 class="modal-title" id="smallmodalLabel">Personel Ekle</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="row form-group">
                        <div class="col col-sm-4"><label for="input-normal" class=" form-control-label">Adı ve Soyadı</label></div>
                        <div class="col col-sm-8"><input type="text" id="input-normal" name="personeladsoyad" placeholder="" class="form-control"></div>
                    </div>
                    <div class="row form-group">
                        <div class="col col-sm-4"><label for="input-normal" class=" form-control-label">Ünvanı</label></div>
                        <div class="col col-sm-8"><input type="text" id="input-normal" name="unvan" placeholder="" class="form-control"></div>
                    </div>
                    <div class="row form-group">
                        <div class="col col-sm-4"><label for="input-normal" class=" form-control-label">Cinsiyeti</label></div>
                        <div class="col col-sm-8"><input type="text" id="input-normal" name="cinsiyet" placeholder="" class="form-control"></div>
                    </div>
                    <div class="row form-group">
                        <div class="col col-sm-4"><label for="input-normal" class=" form-control-label">Fotoğrafı</label></div>
                        <div class="col col-sm-8">
                            <input type="file" name="foto" accept="image/*" />
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-danger" data-dismiss="modal">Vazgeç</button>
                    <button type="submit" class="btn btn-outline-primary">Kaydet</button>
                </div>
            </div>
        </div>
    </div>
}
@foreach (var item in Model)
{
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <strong class="card-title mb-3">Personel Kartı</strong>
            </div>
            <div class="card-body">
                <div class="mx-auto d-block">
                    @if (item.FOTO != null)
                    {
                        <img class="rounded-circle mx-auto d-block" height="150" width="150" src="~/Common/Personeller/@item.FOTO" alt="Card image cap">
                    }
                    @if (item.FOTO == null && item.CINSIYET == "Erkek")
                    {
                        <img class="rounded-circle mx-auto d-block" height="150" width="150" src="~/Common/KullanıcıAvatar/iconfinder_male3_403019.png" alt="Card image cap">
                    }
                    @if (item.FOTO == null && item.CINSIYET == "Kadın")
                    {
                        <img class="rounded-circle mx-auto d-block" height="150" width="150" src="~/Common/KullanıcıAvatar/iconfinder_female_628285.png" alt="Card image cap">
                    }

                    <h5 class="text-sm-center mt-2 mb-1">@item.ADSOYAD</h5>
                    <div class="location text-sm-center"><i class="ti-cut"></i> @item.UNVAN</div>
                </div>
                <hr>
                <div class="card-text text-sm-center">
                    @Html.ActionLink("Sil", "PersonelSil", new { id = item.ID }, new { @class = "btn btn-outline-danger" })

                </div>
            </div>
        </div>
    </div>
}
