    <script src="~/BerberLogin/vendor/bootstrap/js/bootstrap.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/BerberLogin/vendor/select2/select2.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/BerberLogin/vendor/daterangepicker/moment.min.js"></script>
    <script src="~/BerberLogin/vendor/daterangepicker/daterangepicker.js"></script>
    <!--===============================================================================================-->
    <script src="~/BerberLogin/vendor/countdowntime/countdowntime.js"></script>
    <!--===============================================================================================-->
    <script src="~/BerberLogin/js/main.js"></script>

</body>
</html>
