</head>
<body style="background-color: #666666;">
    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100">
                <form class="login100-form validate-form" style="background-color: white" method="post" action="@Url.Action("BerberKayıt", "Home")">
                    <span class="login100-form-title p-b-43">
                       Kayıt Ol
                    </span>
                    <div class="wrap-input100 validate-input" data-validate="E-Posta is required">
                        <input class="input100" type="text" name="email">
                        <span class="focus-input100"></span>
                        <span class="label-input100">E Posta</span>
                    </div>
                    <div class="wrap-input100 validate-input" data-validate="Password is required">
                        <input class="input100" type="password" name="sifre">
                        <span class="focus-input100"></span>
                        <span class="label-input100">Şifre</span>
                    </div>
                    <div class="container-login100-form-btn">
                        <button type="submit" class="login100-form-btn">
                            Kayıt Ol
                        </button>
                    </div>
                    <div class="text-center p-t-46 p-b-20">
                        <a href="~/Berber/Home/BerberGiris" class="txt1">
                            Giriş Yap
                            <i class="fa fa-long-arrow-right m-l-5" aria-hidden="true"></i>
                        </a>
                    </div>
                    <div class="login100-form-social flex-c-m">
                    </div>
                </form>
                <div class="login100-more" style="background-image: url('../../../../BerberimAdminLogin/images/shutterstock_296112071-compressor.jpg');">
                </div>
            </div>
        </div>
    </div>





    <!--===============================================================================================-->
    <script src="~/BerberLogin/vendor/jquery/jquery-3.2.1.min.js"></script>
