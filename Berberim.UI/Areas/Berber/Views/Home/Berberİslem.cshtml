@model IEnumerable<Berberim.Data.Models.ISLEM>

@{
    ViewBag.Title = "Berberİslem";
    Layout = "~/Areas/Berber/Views/_BerberLayout.cshtml";
}

<style>
    .sil {
        position: relative;
        top: -6px;
        float: right;
        color: crimson;
        font-size: 18px;
        cursor: pointer;
    }

        .sil:hover {
            color: indianred;
            font-size: 20px;
        }
</style>

<p>
    <button type="button" class="btn btn-outline-info" data-toggle="modal" data-target="#smallmodal" style="margin-left:15px;margin-top:11px;margin-bottom:20px;">
        İşlem Ekle
    </button>
</p>
@using (Html.BeginForm("BerberİslemEkle", "Home", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
{
    <div class="modal fade" id="smallmodal" tabindex="-1" role="dialog" aria-labelledby="smallmodalLabel" aria-hidden="true">
        <div class="modal-dialog modal-sm" role="document">
            <div class="modal-content" style="width: 130%;">
                <div class="modal-header">
                    <h5 class="modal-title" id="smallmodalLabel">İşlem Ekle</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="row form-group">
                        <div class="col col-sm-4"><label for="input-normal" class=" form-control-label">İşlem Adı</label></div>
                        <div class="col col-sm-8"><input type="text" id="input-normal" name="islemad" placeholder="" class="form-control"></div>
                    </div>
                    <div class="row form-group">
                        <div class="col col-sm-4"><label for="input-normal" class=" form-control-label">İşlem Fiyatı</label></div>
                        <div class="col col-sm-8"><input type="text" id="input-normal" name="islemfiyat" placeholder="" class="form-control"></div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-danger" data-dismiss="modal">Vazgeç</button>
                    <button type="submit" class="btn btn-outline-primary">Kaydet</button>
                </div>
            </div>
        </div>
    </div>
}
@foreach (var item in Model)
{
    <div class="col-xl-3 col-lg-6">
        <div class="card">
            <div class="card-body">
                <div class="sil">
                    <a href="@Url.Action("İslemSil", "Home", new {id = item.ID})">
                        <i class="fa fa-trash-o sil"></i>
                    </a>
                </div>
                <div class="stat-widget-one">
                    <div class="stat-icon dib"><i class="ti-cut text-info border-info"></i></div>
                    <div class="stat-content dib">
                        <div class="stat-text">@item.AD</div>
                        <div class="stat-digit">@item.FIYAT TL</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
