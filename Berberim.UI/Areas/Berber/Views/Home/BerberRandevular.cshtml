@model IEnumerable<Berberim.Data.Randevular>

@{
    ViewBag.Title = "BerberRandevular";
    Layout = "~/Areas/Berber/Views/_BerberLayout.cshtml";
}


<div class="content mt-3">
    <div class="animated fadeIn">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <strong class="card-title">Randevularım</strong>
                    </div>
                    <div class="card-body">
                        <table id="bootstrap-data-table" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>
                                        Salon Mail
                                    </th>
                                    <th>
                                        Salon Telefon
                                    </th>
                                    <th>
                                        Personel Adı
                                    </th>
                                    <th>
                                        Müşteri Adı
                                    </th>
                                    <th>
                                        Müşteri Telefonu
                                    </th>
                                    <th>
                                        Müşteri Mail
                                    </th>
                                    <th>
                                        Randevu Saati
                                    </th>
                                    <th>
                                        Randevu Tarihi
                                    </th>
                                    <th>
                                        İşlem Adı
                                    </th>
                                    <th>
                                        İşlem Fiyatı
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr></tr>
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.SalonMail)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.SalonTel)
                                        </td>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.PersonelAdSoyad)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.MüsteriAd)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.MüsteriTel)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.MusteriMail)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.RandevuSaati)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.RandevuTarihi)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.IslemAd)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.IslemFiyat)
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>
    </div><!-- .animated -->
</div><!-- .content -->