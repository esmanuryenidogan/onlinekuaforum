@using Berberim.Biz
@model IEnumerable<Berberim.Data.Models.SALONSAYFA>

@{
    ViewBag.Title = "BerberKayitGor";
    Layout = "~/Areas/Admin/Views/_AdminSayfa.cshtml";
}


<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title"></h3>
                <div class="box-tools">
                    <div class="input-group input-group-sm" style="width: 150px;">
                        <input type="text" name="table_search" class="form-control pull-right" placeholder="Arama">
                        <div class="input-group-btn">
                            <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.box-header -->
            <div class="box-body table-responsive no-padding">
                <table class="table table-hover">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.AD)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ADRES)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.TEL)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.EMAIL)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.HAKKINDA)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.KOLTUKSAY)
                        </th>

                        <th>
                            @Html.DisplayNameFor(model => model.VITRINYAZI)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.VITRINFOTO)
                        </th>
                        <th>
                            Durum
                        </th>

                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.AD)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ADRES)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TEL)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.EMAIL)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.HAKKINDA)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.KOLTUKSAY)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.VITRINYAZI)
                            </td>
                            <td>
                                <img width="100" height="100" src="~/Resimler/SalonVitrinFoto/@item.VITRINFOTO">
                            </td>

                           
                                @if (item.STATUS == Constants.RecordStatu.Active)
                                {
                                    <td><span class="label label-success">Aktif</span></td>
                                }
                                else
                                {
                                    <td><span class="label label-danger">Pasif</span></td>
                                }
                               

                                <td>@Html.ActionLink("Durum", "Guncelle", new { id = item.ID })</td>
                            </tr>
                        }
                </table>


            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
</div>


