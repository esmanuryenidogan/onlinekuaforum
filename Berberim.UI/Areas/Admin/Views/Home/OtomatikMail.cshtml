@model List<Berberim.Data.OtomatikMail>
@{
    ViewBag.Title = "OtomatikMail";
    Layout = "~/Areas/Admin/Views/_AdminSayfa.cshtml";
}


@using (Html.BeginForm("OtomatikMail", "Home", FormMethod.Post, new { @class = "form-horizontal" }))
{
<div class="col-md-12">
    <div class="col-md-3">
    </div>
    <div class="col-md-6" style="padding-top: 50px">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Otomatik Mail</h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->

            <form class="form-horizontal">
                <div class="box-body">
                    <div class="form-group">
                        <label for="inputEmail3" class="col-sm-3 control-label">Konu</label>

                        <div class="col-sm-9">
                            <input type="email" name="konu" class="form-control" id="inputEmail3" placeholder="Konuyu Girin...">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="" class="col-sm-3 control-label">Mesaj</label>

                        <div class="col-sm-9">
                            <textarea class="form-control" id="message" name="mesaj" placeholder="Lütfen Mesajınızı Girin..." rows="5"></textarea>                        </div>
                    </div>
                  
                </div>
                <!-- /.box-body -->
                <div class="box-footer">

                    <button type="submit" class="btn btn-primary pull-right" style="margin-left: 10px;">Gönder</button>
                    <button type="reset" class="btn btn-default pull-right">Temizle</button>
                </div>
                <!-- /.box-footer -->
            </form>
        </div>
    </div>
</div>
}


